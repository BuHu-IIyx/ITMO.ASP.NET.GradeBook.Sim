<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/styleX.css" />
</head>
<body>
    <div class="content">
        <div class="content-inner">
            <div class="header">
                <div class="inner">
                    <div class="h-logo"><a href="https://de.ifmo.ru/"><img src="~/Content/Images/logo.png"></a></div>
                    <div class="h-brand"><a href="https://de.ifmo.ru/">Электронная информационно-образовательная среда</a></div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="h-nav">
                <div class="inner">
                    <div class="p-left">
                        <a class="active">@Html.ActionLink("Оценочная ведомость", "Index")</a>
                        <div class="sep">&nbsp;</div>
                        <a class="active">@Html.ActionLink("Пятерка лучших студентов", "Best5Students") </a>
                        <div class="sep">&nbsp;</div>
                        <a class="active">@Html.ActionLink("Пятерка худших студентов", "Worst5Students") </a>
                        <div class="sep">&nbsp;</div>
                        <a class="active">@Html.ActionLink("Внести оценки", "EditGrade") </a>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

            <div class="c-page" style="min-height: 1300px">
                <div class="p-inner nobt">
                    @RenderBody()
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</body>
</html>
